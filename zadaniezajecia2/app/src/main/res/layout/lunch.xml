<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lunch"
    tools:context=".LunchActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/check1btn"
        android:layout_width="400px"
        android:layout_height="130px"
        android:layout_marginStart="240dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="CHECK"
        android:contentDescription="Button: Check avocado toast" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/check2btn"
        android:layout_below="@id/check1btn"
        android:layout_width="400px"
        android:layout_height="130px"
        android:layout_marginStart="240dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="CHECK"
        android:contentDescription="Button: Check salmon sandwiches" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/check3btn"
        android:layout_below="@id/check2btn"
        android:layout_width="400px"
        android:layout_height="130px"
        android:layout_marginStart="240dp"
        android:layout_marginTop="190dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="CHECK"
        android:contentDescription="Button: Check zucchini fritters" />

</RelativeLayout>
