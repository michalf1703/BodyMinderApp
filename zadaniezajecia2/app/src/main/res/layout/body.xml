<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ExercisesPanel.AbsActivity">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtubePlayerViewAbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="YouTube Player for ABS Exercises" />

    <TextView
        android:id="@+id/textAbsExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABS Exercises"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:contentDescription="Header Text: ABS Exercises" />

    <!-- Ćwiczenie 1 -->
    <LinearLayout
        android:id="@+id/exercise1LayoutAbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textAbsExercises"
        android:layout_marginTop="16dp"
        android:contentDescription="Layout for Lower ABS Exercise">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lower ABS Exercise"
            android:textStyle="bold"
            android:contentDescription="Text: Lower ABS Exercise" />

        <Button
            android:id="@+id/lowerabsbtnWatchVideo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Video"
            android:contentDescription="Button: Watch Lower ABS Exercise Video" />
    </LinearLayout>

    <!-- Ćwiczenie 2 -->
    <LinearLayout
        android:id="@+id/exercise2LayoutAbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/exercise1LayoutAbs"
        android:layout_marginTop="8dp"
        android:contentDescription="Layout for Upper ABS Exercise">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upper ABS Exercise"
            android:textStyle="bold"
            android:contentDescription="Text: Upper ABS Exercise" />

        <Button
            android:id="@+id/upperabsbtnWatchVideo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Video"
            android:contentDescription="Button: Watch Upper ABS Exercise Video" />
    </LinearLayout>

    <!-- Ćwiczenie 3 -->
    <LinearLayout
        android:id="@+id/exercise3LayoutAbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/exercise2LayoutAbs"
        android:layout_marginTop="8dp"
        android:contentDescription="Layout for Obliques ABS Exercise">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Obliques ABS Exercise"
            android:textStyle="bold"
            android:contentDescription="Text: Obliques ABS Exercise" />

        <Button
            android:id="@+id/obliquesabsbtnWatchVideo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Video"
            android:contentDescription="Button: Watch Obliques ABS Exercise Video" />
    </LinearLayout>

</RelativeLayout>
